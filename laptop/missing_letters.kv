<Missing_letter>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            size_hint: [1, None]
            orientation: 'horizontal'
            Label:
                text: ''
                font_size: 20
                size_hint: [0.3, 0.3]
                id: ques
            TextInput:
                size_hint: [0.3, 0.3]
                id: answer
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            size_hint:[1, None]
            orientation: 'horizontal'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        BoxLayout:
            size_hint:[1, None]
            orientation: 'horizontal'
            Label:
                text:'Find the Missing Letters'
                font_size: 30
            Button:
                text: 'Back to Activities'
                on_press: root.manager.current = 'menu'
                size_hint: None, None
                size: [200, 100]
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: [1, None]
            Button:
                text: root.flag
                on_press: root.get()
            Label:
                text: root.status
            Button:
                text: 'Submit'
                on_press: root.submit(root.ids.answer.text)
