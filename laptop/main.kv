<MenuScreen>:
    RelativeLayout:
        Button:
            text: 'Melody Maker'
            on_press: root.manager.current = 'Melody Maker'
            pos:0, 0
            size_hint: None, None
            size: 100, 100
        Button:
            text: 'Quit'
            on_press: app.stop()
            pos_hint: {'right': 1, 'top': 1}
            size_hint: None, None
            size: 100, 100

<MelodyMaker>:
    BoxLayout:
        Button:
            text: 'My settings button'
            on_press: root.store(1)
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'menu'