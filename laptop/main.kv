<MenuScreen>:
    RelativeLayout:
        Button:
            text: 'Quit'
            on_press: app.stop()
            pos_hint: {'right': 1, 'top': 1}
            size_hint: None, None
            size_hint: [0.1, 0.1]
        AnchorLayout:
            anchor_y: 'bottom'
            BoxLayout:
                orientation: 'horizontal'
                size_hint: None, None
                Button:
                    text: 'Melody Maker'
                    on_press: root.manager.current = 'Melody Maker'
                    size:120, 100
                    size_hint: None, None
                Button:
                    text:'Missing Letters'
                    on_press: root.manager.current = 'Missing'
                    size: 120, 100
                    size_hint: None, None
                Button:
                    text:'Addition'
                    on_press: root.manager.current = 'add'
                    size: 120, 100
                    size_hint: None, None

<MelodyMaker>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Music 1'
                on_press: root.store(1)
                size_hint: [0.3, 0.3]
            Button:
                text: 'Music 2'
                on_press: root.store(2)
                size_hint: [0.3, 0.3]
            Button:
                text: 'Music 3'
                on_press: root.store(3)
                size_hint: [0.3, 0.3]
            Button:
                text: 'Music 4'
                on_press: root.store(4)
                size_hint: [0.3, 0.3]
            Button:
                text: 'Music 5'
                on_press: root.store(5)
                size_hint: [0.3, 0.3]
            Button:
                text: 'Music 6'
                on_press: root.store(6)
                size_hint: [0.3, 0.3]
            Button:
                text: 'Music 7'
                on_press: root.store(7)
                size_hint: [0.3, 0.3]
            Button:
                text: 'Music 8'
                on_press: root.store(8)
                size_hint: [0.3, 0.3]
    Button:
        text: 'Back to Activities'
        on_press: root.manager.current = 'menu'
        pos_hint: {'right': 1, 'top': 1}
        size_hint: None, None
        size: 200, 100
    Button:
        text: 'Play'
        on_press: root.play()
        pos_hint: {'left': 1, 'top': 1}
        size_hint: None, None
        size: 200, 100
